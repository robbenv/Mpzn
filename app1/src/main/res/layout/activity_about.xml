<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.mpzn.mpzn.activity.AboutActivity">
    <com.mpzn.mpzn.views.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color="@color/white"
        android:background="@color/red_theme">

    </com.mpzn.mpzn.views.MyActionBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/center"
        android:layout_below="@+id/action_bar">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_app"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/app_name"
            android:textColor="@color/font_black_0"
            android:textSize="30sp"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tv_splash"
            android:layout_below="@+id/tv_app"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

<View android:id="@+id/center"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_below="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/font_black_0"
                android:textSize="14sp"
                android:text="当前版本"/>
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/font_black_0"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:text="1.0.0"/>
        </RelativeLayout>
        <View style="@style/divider_1"/>
        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/tv_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/center_0"
                android:textColor="@color/font_black_0"
                android:textSize="14sp"
                android:text="卖盘指南客服电话"
                />
            <View android:id="@+id/center_0"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/font_black_4"
                android:textSize="13sp"
                android:text="工作时间：9:00-18:00"
                android:layout_below="@+id/center_0"/>
            <TextView
                android:id="@+id/tv_kefu_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/red_theme"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:text="@string/phone_kefu" />
        </RelativeLayout>
        <View style="@style/divider_1"/>
        <TextView
            android:id="@+id/tv_jjcom_call"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_black_3"
            android:textSize="13sp"
            android:text="经纪公司会员将享受专属电话通道"
            android:drawableRight="@drawable/arrow_right_gray"/>

    </LinearLayout>
</RelativeLayout>
