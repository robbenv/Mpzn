<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/fafafa"
    tools:context="com.mpzn.mpzn.activity.CheckBBActivity">
 <com.mpzn.mpzn.views.MyActionBar
     android:id="@+id/my_action_bar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:title_color="@color/white"
     android:background="@color/red_theme"
     >

 </com.mpzn.mpzn.views.MyActionBar>
    <View
        style="@style/divider_3"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="13dp"
            android:text="报备信息"
            android:textColor="@color/font_black_1"
            android:textSize="17sp" />
        <View style="@style/divider_3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="手机尾号"
                    android:textColor="@color/font_black_3" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/et_addbaobei"
                    android:layout_toEndOf="@+id/tv_khname"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:maxLength="4"
                    android:hint="请输入客户手机号后4位" />
            </LinearLayout>


        <View style="@style/divider_3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="短信凭证"
                android:textColor="@color/font_black_3" />

            <EditText
                android:id="@+id/et_code"
                style="@style/et_addbaobei"
                android:layout_toEndOf="@+id/tv_khname"
                android:layout_weight="3"
                android:inputType="number"
                android:maxLength="5"
                android:hint="请输入5位短信核验码" />
        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="13dp"
                android:text="置业顾问信息"
                android:textColor="@color/font_black_1"
                android:textSize="17sp" />
            <View style="@style/divider_3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="姓     名"
                    android:textColor="@color/font_black_3" />

                <EditText
                    android:id="@+id/et_name_zhiye"
                    style="@style/et_addbaobei"
                    android:layout_toEndOf="@+id/tv_khname"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:hint="请输入置业顾问姓名" />
            </LinearLayout>


            <View style="@style/divider_3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="手     机"
                    android:textColor="@color/font_black_3" />

                <EditText
                    android:id="@+id/et_phone_zhiye"
                    style="@style/et_addbaobei"
                    android:layout_toEndOf="@+id/tv_khname"
                    android:layout_weight="3"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:hint="请输入置业顾问手机" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
