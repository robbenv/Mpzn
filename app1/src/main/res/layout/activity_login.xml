<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.LoginActivity">

  <ImageView
      android:id="@+id/iv_login_user"
      android:layout_below="@+id/my_action_bar"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/logo"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"/>
  <LinearLayout
      android:id="@+id/center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:layout_marginTop="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
      <TextView
          android:id="@+id/tv_login_name"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textSize="16sp"
          android:textColor="@color/black"
          android:text="用户名："/>
      <EditText
          android:id="@+id/et_user_phone"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toEndOf="@+id/tv_login_name"
          android:layout_toStartOf="@+id/btn_clear"
          android:layout_centerVertical="true"
          android:background="@null"
          android:layout_margin="10dp"
          android:inputType="number"
          android:maxLength="11"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:singleLine="true"
          android:imeOptions="actionNext"
          android:hint="手机号"
          />
      <Button
          android:id="@+id/btn_clear"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@drawable/clear_value"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_nomal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
      <TextView
          android:id="@+id/tv_password"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textSize="16sp"
          android:textColor="@color/black"
          android:text="密    码："/>
      <CheckBox
    android:id="@+id/cb_password_look"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:button="@null"
    android:background="@drawable/et_password_look"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/black"
            android:hint="密码"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:maxLength="20"
            android:imeOptions="actionGo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/tv_password"
            android:layout_alignBottom="@+id/tv_password"
            android:layout_toEndOf="@+id/tv_password"
            android:layout_toStartOf="@+id/cb_password_look"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/login"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:background="@drawable/btn_bg_orang_to_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
      <TextView
          android:id="@+id/tv_reg_fast"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="立即注册"
          android:textSize="15sp"
          android:textColor="@color/orange"

          />
      <TextView
          android:id="@+id/tv_reg_for_pho"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="手机号快捷登录"
          android:layout_alignParentRight="true"
          android:textSize="15sp"
          android:textColor="@color/orange"
          android:drawableRight="@drawable/arrow_right_orange"

          />
    </RelativeLayout>

  </LinearLayout>
  <LinearLayout
      android:visibility="invisible"
      android:id="@+id/imgs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_below="@+id/center"
      android:layout_marginLeft="80dp"
      android:layout_marginRight="80dp"
      android:layout_marginTop="40dp">
    <ImageButton
        android:id="@+id/ib_qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/qq"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/ib_wx"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/wx"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:id="@+id/ib_wb"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/wb"
        android:background="@android:color/transparent"/>

  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imgs"
        android:gravity="center">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/font_black_5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/font_black_5"
            android:text="第三方登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/font_black_5"
            />
    </LinearLayout>

  <com.mpzn.mpzn.views.MyActionBar
      android:id="@+id/my_action_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/red_theme"
      app:title_color="@color/white"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true">

  </com.mpzn.mpzn.views.MyActionBar>


</RelativeLayout>