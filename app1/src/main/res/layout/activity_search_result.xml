<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.mpzn.mpzn.activity.SearchResultActivity">

    <include layout="@layout/search_result_top_layout"
        android:id="@+id/search_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mpzn.mpzn.views.SmoothListView.SmoothListView
            android:id="@+id/lv_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="45dp"
            android:divider="@null"
            android:dividerHeight="0dp">

        </com.mpzn.mpzn.views.SmoothListView.SmoothListView>
    <com.mpzn.mpzn.views.FilterView.FilterView
        android:id="@+id/filterView_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.mpzn.mpzn.views.FilterView.FilterView>

    </RelativeLayout>

</LinearLayout>
