<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/gray_nomal"
    tools:context="com.mpzn.mpzn.activity.SetupActivity">
<com.mpzn.mpzn.views.MyActionBar
    android:id="@+id/my_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_theme"
    app:title_color="@color/white">

</com.mpzn.mpzn.views.MyActionBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_action_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/gray_nomal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_account"
                    style="@style/wd_item_btn"
                    android:text="账号与安全"
                    />
                <TextView
                    style="@style/wd_item_tv_right"
                    android:text="手机绑定与更换"
                    android:textColor="@color/font_black_5"/>
            </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_nomal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/white">
                <TextView
                    style="@style/wd_item"
                    android:text="系统通知"/>
                <ToggleButton
                    android:id="@+id/tgb_push"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    style="@style/CustomToggleTheme"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right_gray"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>
            <View
                style="@style/divider_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
            <Button
                android:id="@+id/btn_clear_cache"
                style="@style/wd_item_btn"
                android:text="清空缓存"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_nomal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_1"/>
            <Button
                android:id="@+id/btn_img_browser_setting"
                style="@style/wd_item_btn"
                android:text="图片浏览设置"
                />
            <View
                style="@style/divider_2"/>
            <Button
                android:id="@+id/btn_suggest"
                style="@style/wd_item_btn"
                android:text="意见反馈"
                />
            <View
                style="@style/divider_2"/>
            <Button
                android:id="@+id/btn_check_version"
                style="@style/wd_item_btn"
                android:text="检查新版本"
                />
            <View
                style="@style/divider_2"/>
            <Button
                android:id="@+id/btn_check_net"
                style="@style/wd_item_btn"
                android:text="诊断网络"
                />
            <View
                style="@style/divider_2"/>
            <Button
                android:id="@+id/btn_about"
                style="@style/wd_item_btn"
                android:text="关于"
                />
            </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/gray_nomal">
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="退出登录"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg_red"
        />
</RelativeLayout>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>
