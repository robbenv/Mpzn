<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/coners_radius_8dp_white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="绑定手机号"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/font_black_0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:textSize="14sp"
            android:textColor="@color/font_black_2"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="请输入你的手机号"
            android:inputType="phone"
            android:padding="2dp"
            android:textColorHint="@color/font_black_5"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="11"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/btn_check"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="发送验证码"
            android:enabled="false"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_orang_to_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="验证码:"
            android:textSize="14sp"
            android:textColor="@color/font_black_2"
            />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:padding="2dp"
            android:textColorHint="@color/font_black_5"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="11"
            android:background="@color/transparent"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="密    码:"
            android:textSize="14sp"
            android:textColor="@color/font_black_2"
            />
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="请输入密码"
            android:inputType="phone"
            android:padding="2dp"
            android:textColorHint="@color/font_black_5"
            android:textSize="14sp"
            android:maxLines="1"
            android:maxLength="11"
            android:background="@color/transparent"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:text="请输入你的手机号"
        android:textColor="@color/font_black_4"
        android:gravity="center"
        android:textSize="12sp"
        android:id="@+id/tv_tips"
        android:layout_marginBottom="25dp"/>

    <View style="@style/divider_3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/font_black_3"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:text="取消"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_2"
            />
        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/font0_dis_enable_font5"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:text="绑定"/>
    </LinearLayout>

</LinearLayout>