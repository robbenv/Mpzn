<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coners_radius_8dp_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="标题"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/font_black_0"/>
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="14sp"
            android:textColor="@color/font_black_3"
            />
        </FrameLayout>
    </LinearLayout>
    <View style="@style/divider_3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/font_black_3"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:text="取消"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_2"
            />
        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/font0_dis_enable_font5"
            android:textSize="14sp"
            android:background="@color/transparent"
            android:text="确定"/>
    </LinearLayout>


</LinearLayout>